@using MVC_Classifieds.Api.Models.Users
@using MVC_News.MVC.Models.Partials
@model RegisterPageModel;

@{
    ViewData["Title"] = "Pee";
}

<div class="mixin-page-like mixin-page-base mixin-content-grid">
    <div class="flex flex-col gap-2" data-track="base">
        <header class="text-xl font-bold">
            Register
        </header>
        <div
            class="bg-gray-200 border-gray-300 border rounded px-2 py-1 text-sm flex flex-row overflow-hidden justify-between">
            <div class="truncate">
                Already have an account?
            </div>
            <a class="text-blue-600 hover:underline" href="/login">Go to Login</a>
        </div>
        <form class="flex flex-col gap-4" action="/register" method="post">
            @await Html.PartialAsync("Reusables/_FormErrors", Model.Errors.TryGetValue("_", out var formErrors) ? formErrors : null)
            
            @await Html.PartialAsync("Reusables/_FormField", new FormFieldVPartialiewModel(
                label: "Email",
                errors: Model.Errors.TryGetValue("Email", out var emailErrors) ? emailErrors : null,
                partialRoute: "Reusables/_CharField",
                partialProps: new CharFieldPartialViewModel(
                    value: Model.Email,
                    name: "email",
                    inputAttrs: new Dictionary<string, string>()
                    {
                        { "type", "email" }
                    }
                )
            ))
            @await Html.PartialAsync("Reusables/_FormField", new FormFieldVPartialiewModel(
                label: "Password",
                errors: Model.Errors.TryGetValue("Password", out var passwordErrors) ? passwordErrors : null,
                partialRoute: "Reusables/_CharField",
                partialProps: new CharFieldPartialViewModel(
                    value: Model.Password,
                    name: "password",
                    inputAttrs: new Dictionary<string, string>()
                    {
                        { "type", "password" }
                    }
                )
            ))
            @await Html.PartialAsync("Reusables/_FormField", new FormFieldVPartialiewModel(
                label: "Display Name",
                errors: Model.Errors.TryGetValue("DisplayName", out var displayNameErrors) ? displayNameErrors : null,
                partialRoute: "Reusables/_CharField",
                partialProps: new CharFieldPartialViewModel(
                    value: Model.DisplayName,
                    name: "displayName",
                    inputAttrs: new Dictionary<string, string>()
                    {
                        { "type", "text" }
                    }
                )
            ))
            <div class="w-full h-0 border-t border-gray-900"></div>
            <footer class="flex flex-row gap-2 justify-end">
                <button class="mixin-button-like mixin-button-base theme-button-generic-gray" type="reset">
                    Reset
                </button>
                <button class="mixin-button-like mixin-button-base theme-button-generic-green" type="submit">
                    Submit
                </button>
            </footer>
        </form>
    </div>
</div>