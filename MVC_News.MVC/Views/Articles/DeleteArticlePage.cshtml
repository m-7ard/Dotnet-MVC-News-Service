@using MVC_News.MVC.Models.Articles;
@using MVC_News.MVC.Models.Partials;
@model DeleteArticlesPageModel;
@{
    ViewData["Title"] = "Delete Article";
}

<div class="mixin-page-like mixin-page-base mixin-content-grid">
    <div class="flex flex-col gap-2" data-track="base">
        <header class="flex flex-row gap-[inherit] items-center justify-between">
            <div class="text-xl">
                <span class="font-bold">
                    Delete Article
                </span>
                <span>
                    "@Model.Article.Title"
                </span>
            </div>
        </header>
        <form class="flex flex-col gap-4" method="POST">
            <div class="flex flex-col gap-2 grow overflow-hidden">
                @await Html.PartialAsync("Reusables/_CoverImage", new CoverImagePartialViewModel(
                    className: "w-full aspect-[16/9] grow border border-gray-900",
                    src: Model.Article.HeaderImage
                ))
                <div class="overflow-hidden">
                    <div class="token-default-title line-clamp-2">
                        @Model.Article.Title
                    </div>
                    <div class="flex flex-col overflow-hidden">
                        <div class="text-xs truncate">
                            @Model.Article.Author.DisplayName
                        </div>
                        <div class="text-xs text-gray-500 truncate">
                            @Model.Article.DateCreated
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-2">
                <button type="submit" class="mixin-Sbutton-like mixin-Sbutton-base theme-Sbutton-generic-red justify-center">
                    Confirm Deletion
                </button>
                <a class="mixin-Sbutton-like mixin-Sbutton-base theme-Sbutton-generic-white justify-center" href="/articles/manage">
                    Cancel Deletion
                </a>
            </div>
        </form>
    </div>

</div>